{
    "name": "payzero/commission-task-skeleton",
    "description": "PayZero",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "PayZero\\App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PayZero\\App\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-bcmath": "*",
        "symfony/dotenv": "^6.2"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "friendsofphp/php-cs-fixer": "v3.8.0"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
